{
  "name": "personal-website",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier . --write"
  },
  "dependencies": {
    "@astrojs/vercel": "^8.1.5",
    "@fontsource-variable/geist-mono": "^5.2.6",
    "@lucide/astro": "^0.513.0",
    "@tailwindcss/vite": "^4.1.8",
    "astro": "^5.9.1",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.8"
  },
  "devDependencies": {
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.12"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-astro",
      "prettier-plugin-tailwindcss"
    ],
    "overrides": [
      {
        "files": "*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ]
  }
}
